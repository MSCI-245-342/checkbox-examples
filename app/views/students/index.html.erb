<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Special</th>
      <th>Visa</th>
      <th>Honors</th>
      <th>Clubs</th>  
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.grade %></td>
        <td><%= student.is_special %></td>
        <td><%= student.is_visa %></td>
        <td><%= student.is_honors %></td>
        <td><%= student.clubs_as_string %></td>  
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
